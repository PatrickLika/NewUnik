@page
@model Unik.WebApp.Pages.Kunde.IndexModel
@{
}
<form metod="post">
    <table class="table">
        <thead>
            <tr>
                <th>Kunde Id</th>
                <th>Virksomhed</th>
                <th>Navn</th>
                <th>Email</th>
                <th>Telefon Nummer</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.KundeIndexViewModels.Any())
            {
                foreach (var kunde in Model.KundeIndexViewModels)
                {
                    <tr>
                        <td>@kunde.Id</td>
                        <td>@kunde.VirksomhedNavn</td>
                        <td>@kunde.Navn</td>
                        <td>@kunde.Email</td>
                        <td>@kunde.Tlf</td>
                        <td>
                            <!--<Snippet_Edit>-->
                            <a class="btn" asp-page="./Edit" asp-route-id="@kunde.Id">Edit</a>
                            <!--<Snippet Edit>-->
                            <!--<Snippet_Delete>-->
                            <a class="btn" asp-page-handler="./Delete" asp-route-id="@kunde.Id">Delete</a>
                            <!--<Snippet_Delete>-->
                        </td>

                    </tr>

                }

            }
        </tbody>

    </table>
    <a asp-page="Create">Create now</a>
</form>