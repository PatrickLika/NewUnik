@page
@model Unik.Webapp.Pages.Booking.FindMedarbejderModel
@{
}
<form metod="post">
    <br />
    <h1>Oversigt over mulige medarbejdere</h1>
    <hr style="height:1px;border:none;color:#000000;background-color:#000000; opacity: 1" />
    <section class="col-sm-10">
    </section>
    

    <table class="table">
        <thead>
        <tr>
            <th>Medarbejder Id</th>
            <th>StartDato</th>
            <th>SlutDato</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.FindMedarbejderViewModel.Any())
        {
            foreach (var medarbejder in Model.FindMedarbejderViewModel)
            {
                <tr>
                    <td>@medarbejder.MedarbejderId</td>
                    <td>@medarbejder.StartDato.ToShortDateString()</td>
                    <td>@medarbejder.SlutDato.ToShortDateString()</td>
                        <td><a asp-page="./Create" asp-route-medarbejderId="@medarbejder.MedarbejderId" asp-route-slutDato="@medarbejder.SlutDato.ToString()" asp-route-varighed="@medarbejder.Varighed" asp-route-opgaveId="@medarbejder.OpgaveId">Book</a></td>
                </tr>
            }
        }
        </tbody>
    </table>
    <a asp-page="Create">Opret</a>
</form>