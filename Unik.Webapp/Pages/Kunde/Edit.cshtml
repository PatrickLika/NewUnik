@model Unik.WebApp.Pages.Kunde.EditModel
@{
}

<h2>Rediger Kunde</h2>
<section class="row">
    <section class="col-md-6">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EditViewModel.Id" class="form-control" />
            <input type="hidden" asp-for="EditViewModel.RowVersion" class="form-control" />
            <section class="form-group">
                <label asp-for="EditViewModel.Navn"></label>
                <input asp-for="EditViewModel.Navn" class="form-control rounded" />
            </section>
            <section class="form-group">
                <label asp-for="EditViewModel.Tlf"></label>
                <input asp-for="EditViewModel.Tlf" class="form-control rounded" />
            </section>
            <section class="form-group">
                <label asp-for="EditViewModel.VirksomhedsNavn"></label>
                <input asp-for="EditViewModel.VirksomhedsNavn" class="form-control rounded" />
            </section>
            <button type="submit" class="btn btn-default">Opdater Kunde</button>
            <a asp-page="Index" type="submit" class="btn btn-info rounded">Tilbage til oversigt</a>

        </form>
    </section>
</section>


