@page "{SearchString?}"
@model Unik.WebApp.Pages.Kompetence.IndexModel
@{
}
<form method="post">
    <table class="table">
        <br />
        <h1>Oversigt over kompetence</h1>
        <hr style="height:1px;border:none;color:#000000;background-color:#000000; opacity: 1" />
        <section class="col-sm-10">
        </section>
        <br>
        <form>
            <p>
                <input type="text" placeholder="Søg på kompetence" asp-for="@Model.SearchString"/>
                <input type="submit" class="btn btn-warning rounded" value="Søg" />
                <a href="/Kompetence" class="btn btn-primary rounded" >Nulstil</a>

            </p>
        </form>
        <thead>
        <tr>
            <th>ID</th>
            <th>Navn</th>
            <th>Type</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @if (Model.IndexViewModel.Any())
        {
            foreach (var Kompetence in Model.IndexViewModel)
            {
                <tr>
                    <td> @Kompetence.Id </td>
                    <td> @Kompetence.Navn </td>
                    <td>@Kompetence.Type</td>
                    <td>
                            <a asp-page="./Details" asp-route-id="@Kompetence.Id">Details</a> |

                        <!-- <snippet_Edit> -->
                        <a asp-page="./Edit" asp-route-id="@Kompetence.Id">Edit</a> |
                        <!-- </snippet_Edit> -->
                        <!-- <snippet_Delete> -->
                        <a asp-page="./Delete" asp-route-id="@Kompetence.Id">Delete</a>
                        <!-- </snippet_Delete> -->
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
@*    <a asp-page="Create" class="btn btn-success rounded">Opret ny</a>
*@</form>
